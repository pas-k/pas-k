#Rock Paper Scissors Gameplay vs Computer
import random
##
user = input("Rock, Paper, or Scissors?\n")
if user == 'Rock':
    user_number = 1
elif user == 'Paper':
    user_number = 2
elif user == 'Scissors':
    user_number = 3
else:
        print("Please enter a valid choice\n")
##
computer_number = random.randint(1,3)
if computer_number == 1:
    print("The computer chooses Rock\n")
    if user_number == 1:
        print("Rock vs Rock... It's a Tie!\n")
    elif user_number == 2:
        print("Rock vs Paper... You win!\n")
    elif user_number == 3:
        print("Rock vs Scissors... You lose!\n")
if computer_number == 2:
    print("The computer chooses Paper\n")
    if user_number == 1:
        print("Paper vs Rock... You lose!\n")
    elif user_number == 2:
        print("Paper vs Paper... It's a Tie!\n")
    elif user_number == 3:
        print("Paper vs Scissors... You win!!\n")
if computer_number == 3:
    print("The computer chooses Scissors\n")
    if user_number == 1:
        print("Scissors vs Rock... You win!\n")
    elif user_number == 2:
        print("Scissors vs Paper... You lose!\n")
    elif user_number == 3:
        print("Scissors vs Scissors... It's a Tie!\n")
